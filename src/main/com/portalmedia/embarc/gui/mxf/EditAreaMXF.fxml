<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import com.portalmedia.embarc.gui.*?>

<AnchorPane
	fx:id="editAreaAnchorPane"
	xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="com.portalmedia.embarc.gui.mxf.EditAreaMXFController"
>
	<VBox
		AnchorPane.bottomAnchor="0.0"
		AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0"
		AnchorPane.topAnchor="0.0"
	>
		<AnchorPane
			fx:id="editAreaContainer"
			VBox.vgrow="ALWAYS"
		/>
		<AnchorPane
			maxHeight="100.0"
			minHeight="100.0"
			style="-fx-background-color: #D1D9DE"
		>
			<HBox
				style="-fx-padding: 10 40 10 10;"
				AnchorPane.bottomAnchor="0.0"
				AnchorPane.leftAnchor="0.0"
				AnchorPane.rightAnchor="0.0"
				AnchorPane.topAnchor="0.0"
			>
				<Pane HBox.hgrow="NEVER">
					<ImageView
						fx:id="fadgiLogoImageView"
						scaleX="0.5"
						scaleY="0.5"
						layoutY="-22.0"
					>
						<image>
							<Image url="resources/fadgi_box.jpg" />
						</image>
					</ImageView>
				</Pane>
				<Pane HBox.hgrow="ALWAYS"/>
				<Pane HBox.hgrow="NEVER">
					<Button
						fx:id="writeMXFFilesButton"
						mnemonicParsing="false"
						text="Write Files"
						style="
							-fx-font-size: 16px; 
							-fx-font-weight: bold;  
							-fx-text-fill: black; 
							-fx-padding: 10px 20px; 
							-fx-base: #E5E5E5;
						"
						prefHeight="40.0"
						layoutY="18.0"
					>
						<graphic>
							<FontAwesomeIconView
								glyphName="DOWNLOAD"
								size="20px"
							/>
						</graphic>
					</Button>
				</Pane>
			</HBox>
		</AnchorPane>
	</VBox>
</AnchorPane>
